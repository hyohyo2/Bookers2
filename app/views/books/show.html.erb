<!--ユーザーの情報-->
<h1>User info</h1>

<table>
  <tr><!--ユーザー画像-->
    <%= image_tag @user.get_profile_image(100,100) %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th></th>
  </tr>
</table>

<!--投稿ページ-->
<h1>New book</h1>
<%= form_with model: @new_book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :caption %>
 <%= f.submit 'Create Book' %>
<% end %>




<h1>Book detail</h1>

<div>
  <!--ユーザー画像-->


  <%= link_to user_path(@user) do %>
  <%= image_tag @user.get_profile_image(100,100) %><br>
  <%= @user.name %>
  <% end %>
  <!--ユーザー名前-->
  <p></p>
  <!--投稿タイトル-->
  <p><%= @book.title %></p>
  <!--投稿内容-->
  <p><%= @book.caption %></p>

  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
</div>