<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

<label for="inputTitle">Title</label>
<%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"こんにちは" %>
<label for="inputOpinion">Opinion</label>
<%= f.text_field :caption, autofocus: true, id:"inputCaption", placeholder:"Caption" %>
<%= f.submit "Update Book" %>

<% end %>

<p><%= link_to "Show", book_path(@book) %>｜<%= link_to "Back", books_path %></p>
