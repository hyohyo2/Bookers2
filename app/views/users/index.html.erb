<!--ユーザーの情報-->
<h1>User info</h1>

<table>
  <tr><!--ユーザー画像-->
    <%= image_tag user.get_profile_image(100,100) %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th></th>
  </tr>
</table>

<!--投稿ページ-->
<h1>New book</h1>
<%= form_with model: @new_book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :caption %>
 <%= f.submit 'Create Book' %>
<% end %>


<h1>Users</h1>
<!--ユーザー一覧-->

<% @users.each do |user| %>
<div>
  <!--プロフィール画像-->
  <p>image
    <%= image_tag user.get_profile_image(100, 100) %>
  </p>
　<!--ユーザー名-->
  <p>name<%= user.name %></p>
  <!--showページ(ユーザー)へのリンク-->
  <%= link_to "Show", user_path(user) %>
</div>
<% end %>