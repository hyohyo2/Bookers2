 <div class='container'>
  <div class="row">
   <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-3 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
      <h4><%= @user.errors.count %>error prohibited this obj from being saved:</h4>
      <ul>
       <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
    <% end %>

    <%= form_with model: @user do |f| %>
      <div class="field">
        <p>Name</p>
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder:"" %><br>
        <p>ProfileImage</p>
        <%= f.file_field :profile_image, accept: "image/*" %><br>
        <p>Introduction</p>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", placeholder:"" %><br>
      </div>
        <!--f.text_area :introduction, autofocus: true, id:"inputIntroduction",placeholder:"" %><br>-->
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-md btn-secondary" %>
      </div>
    <% end %>
   </div>
  </div>
 </div>