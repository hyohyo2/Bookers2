 <div class='container'>
  <div class="row">
   <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-3 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
      <h4><%= @user.errors.count %>error prohibited this obj from being saved:</h4>
      <ul>
       <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
    <% end %>
 
    <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <input type="text" class="form-control name" id="inputName" placeholder:"" >
      </div>
      <div class="form-group">
        <label for="inputImage">ProfileImage</label>
        <input type="file" class="form-control-file" id="inputFile" accept: "image/*" >
      </div>
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
          <textarea class="form-control introduction" id="introduction" placeholder:"" ></textarea>
      </div>
        <!--f.text_area :introduction, autofocus: true, id:"inputIntroduction",placeholder:"" %><br>-->
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-sm btn-secondary" %>
      </div>
    <% end %>
   </div>
  </div>
 </div>