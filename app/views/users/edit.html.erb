<div class='container' >
  <div class="row">
  <div class= "mx-auto">
    <h2>User info</h2>
    
    <% if @user.errors.any? %>
      <h4><%= @user.errors.count %>error prohibited this obj from being saved:</h4>
      <ul>
       <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
    <% end %>
 
     <%= form_with model: @user do |f| %>

     <label for="inputName">Name</label><br>
       <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"" %><br>


     <label for="inputImage">ProfileImage</label><br>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>

     <label for="inputIntroduction">Introduction</label><br>
       <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction",placeholder:"" %><br>
       <%= f.submit "Update User", class: "btn btn-sm btn-secondary" %><br>
     <% end %>

  </div>
  </div>
</div>