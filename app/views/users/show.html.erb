<!--ユーザーの情報-->
<h1>User info</h1>

<table>
  <tr><!--ユーザー画像-->
    <%= image_tag @user.get_profile_image(100,100) %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction
    </th>
    <th></th>
  </tr>
</table>

<!--投稿ページ-->
<h1>New book</h1>
<%= form_with model: @new_book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :caption %>
 <%= f.submit 'Create Book' %>
<% end %>



<!--テーブルのレイアウト-->


<!--ユーザーごとのBooks一覧-->
<h1>Books</h1>

<table>
<thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</thead>

<tbody>
 <% @books.each do |book| %>

  <div>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td>  <%= link_to book.title, book_path(book) %></td>
      <td> <%= book.caption %></td>
    </tr>
  </div>
 <% end %>
</tbody>
</table>