

<!--ユーザ・投稿部分テンプレート設定-->
<%= render 'books/list', new_book: @new_book, user: @user %>

<!--テーブルのレイアウト-->


<!--ユーザーごとのBooks一覧-->

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<table class="table">
<thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    
  </tr>
</thead>

<tbody>
 <% @books.each do |book| %>

  <div>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td>  <%= link_to book.title, book_path(book) %></td>
      <td> <%= book.Body %></td>
    </tr>
  </div>
 <% end %>
</tbody>
</div>
</table>

